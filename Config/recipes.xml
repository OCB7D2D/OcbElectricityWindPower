<configs>

	<append xpath="/recipes">
	
		<recipe name="ocbElectricityModernWindmill" count="1"
				tags="perkAdvancedEngineering,learnable,workbenchCrafting"
				craft_area="workbench" material_based="false"
				craft_time="15">
			<ingredient name="resourceMilitaryFiber" count="3"/>
			<ingredient name="resourceScrapPolymers" count="12"/>
			<ingredient name="resourceMechanicalParts" count="12"/>
			<ingredient name="resourceElectricParts" count="6"/>
			<ingredient name="resourceForgedSteel" count="20"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="0,1,2,3,4" operation="perc_add"
					value=".5,.5,.5,.3,.15" tags="resourceScrapPolymers,resourceMechanicalParts,resourceElectricParts,resourceForgedSteel"/>
			</effect_group>
		</recipe>

		<recipe name="ocbElectricityRusticWindmill" count="1"
				tags="perkAdvancedEngineering,learnable,workbenchCrafting"
				craft_area="workbench" material_based="false"
				craft_time="15">
			<ingredient name="resourceMechanicalParts" count="6"/>
			<ingredient name="resourceElectricParts" count="3"/>
			<ingredient name="resourceScrapIron" count="20"/>
			<ingredient name="resourceWood" count="80"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="0,1,2,3,4" operation="perc_add"
					value=".5,.5,.5,.3,.15" tags="resourceMechanicalParts,resourceElectricParts,resourceScrapIron,resourceWood"/>
			</effect_group>
		</recipe>

		<recipe name="ocbElectricitySmallStator" count="1" tags="perkAdvancedEngineering,learnable"
				craft_area="forge" material_based="true" craft_time="30">
			<ingredient name="unit_iron" count="40"/>
			<ingredient name="unit_brass" count="120"/>
		</recipe>
	
	</append>

</configs>
